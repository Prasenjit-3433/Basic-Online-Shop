<article class="cart-item">
    <div class="cart-item-info">
        <h2><%= item.product.title %></h2>
        <p>Subtotal: $<%= item.totalPrice.toFixed(2) %>  <span class="cart-product-price">($<%= item.product.price.toFixed(2) %> per piece)</span></p>
    </div>

    <div class="cart-item-management">
        <input type="number" value="<%= item.quantity %>" required>
        <button class="btn btn-alt">UDATE</button>
    </div>
</article>